{
  "name": "spotify-wrapper",
  "version": "1.0.0",
  "description": "A wrapper to work with the Spotify Web API",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/**/*.js tests/**/*.spec.js",
    "prepush": "npm run lint && npm run test:converage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "npm test -- --watch ",
    "test:converage": "nyc npm test"
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-converage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaaomanooel/spotify-wrapper.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Jo√£o Manoel Neto <joaaomanooel@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joaaomanooel/spotify-wrapper/issues"
  },
  "homepage": "https://github.com/joaaomanooel/spotify-wrapper#readme",
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "husky": "^0.14.3",
    "mocha": "^5.1.1",
    "node-fetch": "^2.1.2",
    "nyc": "^11.8.0",
    "sinon": "^5.0.7",
    "sinon-chai": "^3.0.0",
    "sinon-stub-promise": "^4.0.0"
  }
}
